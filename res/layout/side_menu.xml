<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/slide1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#2162a6"
        android:padding="20dp"
        android:visibility="visible" >

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="40dp"
	        android:textColor="#FFFFFF"
	        android:textSize="24sp"
	        android:text="Acknowledgement" />

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="#ffffff"
	            android:textSize="18sp" />

	    </LinearLayout>
	    
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/slide2"
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
        android:background="#2162a6"
	    android:padding="20dp"
        android:visibility="gone" >

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="40dp"
	        android:textColor="#FFFFFF"
	        android:textSize="24sp"
	        android:text="Why this app?" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView2"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="18dp"
	        android:lineSpacingExtra="2dp"
	        android:padding="4dp"
	        android:text="The New Business Road Test app enables entrepreneurs to road test their start-up idea while out and about. It assists the user in gathering real-world evidence to answer the most crucial question they face: “Why will or won’t my idea work?” The app, like the book, does so by providing an evidence-based approach to answering three key fundamental questions: Is this an attractive market? Do you really want to compete in this industry? Is yours the right team to pursue this particular opportunity?"
	        android:textColor="#FFFFFF"
	        android:textColorHint="#FFFFFF"
	        android:textSize="16sp" />
	    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/slide3"
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
        android:background="#2162a6"
	    android:padding="20dp"
        android:visibility="gone" >

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="40dp"
	        android:textColor="#FFFFFF"
	        android:textSize="24sp"
	        android:text="How to use" />

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:text="You can record your responses to questions asked in the app in the form of text, audio recordings, video recordings, or images. The icons used are: "
	            android:textColor="#FFFFFF"
	            android:textSize="16dp" />

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp" >

	            <ImageView
	                android:id="@+id/imageView3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/text_w" />

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center"
	                android:layout_marginLeft="20dp"
	                android:text="Text"
	                android:textColor="#ffffff"
	                android:textSize="18sp" />

	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp" >

	            <ImageView
	                android:id="@+id/imageView3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/camera_w" />

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center"
	                android:layout_marginLeft="20dp"
	                android:text="Media (Image/Video)"
	                android:textColor="#ffffff"
	                android:textSize="18sp" />

	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp" >

	            <ImageView
	                android:id="@+id/imageView3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/audio_w" />

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center"
	                android:layout_marginLeft="20dp"
	                android:text="Audio"
	                android:textColor="#ffffff"
	                android:textSize="18sp" />

	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp" >

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical|center"
	                android:text="All the data you add is stored on your device and no data is uploaded to the cloud without your consent."
	                android:textColor="#ffffff"
	                android:textSize="14sp" />

	        </LinearLayout>

	    </LinearLayout>
	    
    </RelativeLayout>

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout
            android:id="@+id/prev_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#114377"
                android:clickable="true"
                android:onClick="showPrev"
                android:padding="5dp"
                android:src="@drawable/prev" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#114377"
                android:clickable="true"
                android:onClick="showNext"
                android:padding="5dp"
                android:src="@drawable/next" />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/continue_wrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right|center_vertical" >

            <Button
                style="@style/button"
                android:id="@+id/button1"
                android:background="#114377"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="Start"
                android:onClick="showDomain" />

        </LinearLayout>
        
    </LinearLayout>

</FrameLayout>