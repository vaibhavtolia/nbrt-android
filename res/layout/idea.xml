<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="#ffffff" >

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="What do you call your startup?"
           android:textColor="#969696" />

       <EditText
           android:id="@+id/editText1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

       </EditText>

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="What customer problem do you seek to resolve? "
           android:textColor="#969696" />

       <EditText
           android:id="@+id/editText2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           
       </EditText>

       <TextView
           android:id="@+id/textView5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="Your target customer segment who has this problem or experience?"
           android:textColor="#969696" />

       <EditText
           android:id="@+id/editText3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           
       </EditText>

       <TextView
           android:id="@+id/textView6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="Your proposed solution to that problem?"
           android:textColor="#969696" />

       <EditText
           android:id="@+id/editText4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           
       </EditText>

       <TextView
           android:id="@+id/textView7"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="The industry in which you will compete ? (see NBRT chapter 3)"
           android:textColor="#969696" />

       <EditText
           android:id="@+id/editText5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

          
       </EditText>      
</LinearLayout>